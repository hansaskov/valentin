---
// EventCard.astro
interface Props {
    title: string;
    date: string;
    description: string;
    imageUrl: string;
    imageAlt: string;
    isReversed?: boolean;
}

const { 
    title, 
    date, 
    description, 
    imageUrl, 
    imageAlt, 
    isReversed = false 
} = Astro.props;
---

<div class="relative mb-12 md:mb-24 timeline-section">
    <div class="timeline-dot"></div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-16 items-start">
        <!-- Title Section -->
        <div class={`${isReversed ? 'order-1 md:order-2 md:text-left' : 'order-1 md:text-right'}`}>
            <h2 class="text-2xl font-bold text-pink-600 mb-2">{title}</h2>
            <p class="text-pink-500">{date}</p>
        </div>

        <!-- Content Section -->
        <div class={`bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow ${
            isReversed ? 'order-2 md:order-1' : 'order-2'
        }`}>
            <p class="text-gray-700 mb-4">{description}</p>
            <img 
                src={imageUrl} 
                alt={imageAlt} 
                class="w-full rounded-lg object-cover h-64"
            >
        </div>
    </div>
</div>