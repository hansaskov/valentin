---
import "../styles/global.css";
import EventCard from '../components/EventCard.astro';

// You might want to create an interface or type for your events
interface TimelineEvent {
    title: string;
    date: string;
    description: string;
    imageUrl: string;
    imageAlt: string;
}

// You can store your events data in an array
const events: TimelineEvent[] = [
    {
        title: "Første Møde",
        date: "16. september 2022",
        description: "Det hele startede til en kollegiefest på dit kollegie. Der blev drukket godt igennem, men en ting stod ud. Dig. Jeg husker hvordan vi havde nogle vidunderlig samtaler omkring vores studier. Jeg husker dig som at være enomrt sød, venlig og imødekommende. Men mere skete der ikke den aften. Jeg har ikke nogle billeder fra dengang, så forneden kan du se dit gamle kollegie.",
        imageUrl: "/Slotsgade-Kollegiet.png",
        imageAlt: "Første møde"
    },
    {
        title: "Vi Blev Kærester",
        date: "4. januar 2023",
        description: "Den dag du sagde ja til at være min kæreste. Det bedste ja jeg nogensinde har fået 💝",
        imageUrl: "/Dagen-vi-blev-kæresterjpg.jpg",
        imageAlt: "Blev kærester"
    },
    {
        title: "Rød Panda Eventyr",
        date: "14. februar 2023",
        description: "Vores første Valentinsdag sammen i Odense Zoo.",
        imageUrl: "/Sofie-og-Hans-i-odense-zoo.jpg",
        imageAlt: "Odense Zoo"
    },
    {
        title: "Oslo Eventyr",
        date: "23. august 2023",
        description: "Vores første udlandsrejse sammen. Norge var magisk, men mest fordi du var der 🇳🇴",
        imageUrl: "/Hans-og-sofie-norge.jpg",
        imageAlt: "Oslo Tur"
    },
    {
        title: "Kreta Paradis",
        date: "19. august 2024",
        description: "Vores smukke middelhavseventyr. Sol, strand og kærlighed 🌊",
        imageUrl: "/Hans-og-sofie-kreta-bådtur.jpg",
        imageAlt: "Kreta Ferie"
    }
];
---

<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Til Min Kære Sofie ❤️</title>
</head>
<body class="bg-pink-50">
    <div class="min-h-screen p-4">
        <!-- Header -->
        <header class="text-center py-16 px-4">
            <h1 class="text-2xl md:text-4xl font-bold text-pink-600 mb-4">Til min kæreste Sofie. Glædelig valentins dag ❤️</h1>
            <p class="text-pink-500 text-lg md:text-xl">Tag med mig i en tur ned i memory lane</p>
        </header>

        <!-- Timeline -->
        <div class="max-w-6xl mx-auto relative pb-32">
            <div class="timeline-line"></div>

            {events.map((event, index) => (
                <EventCard 
                    title={event.title}
                    date={event.date}
                    description={event.description}
                    imageUrl={event.imageUrl}
                    imageAlt={event.imageAlt}
                    isReversed={index % 2 !== 0}
                />
            ))}

            <!-- Fotogalleri -->
            <div class="relative timeline-section">
                <h2 class="text-2xl font-bold text-pink-600 mb-6 text-center">Flere Dejlige Minder Sammen</h2>
                <div class="timeline-dot -mt-2"></div>
                <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow max-w-4xl mx-auto">
                    
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                        <img src="/Sofie-og-baby.jpg" alt="Minde 1" class="w-full h-48 object-cover rounded-lg">
                        <img src="/Sofie-blomster.jpg" alt="Minde 2" class="w-full h-48 object-cover rounded-lg">
                        <img src="/Sofie-og-Hans-på-kreta-2.jpg" alt="Minde 3" class="w-full h-48 object-cover rounded-lg">
                        <img src="/Sofie-Oslo.jpg" alt="Minde 4" class="w-full h-48 object-cover rounded-lg">
                        <img src="/Sofie-på-kreta.jpg" alt="Minde 5" class="w-full h-48 object-cover rounded-lg">
                        <img src="/sofie-hans-og-baby.jpg" alt="Minde 6" class="w-full h-48 object-cover rounded-lg">
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="text-center py-8">
            <p class="text-pink-500">Lavet med ❤️ af Hans</p>
            <p class="text-pink-400 mt-2">Glædelig Valentinsdag 2025, min kære Sofie!</p>
        </footer>
    </div>
</body>
</html>